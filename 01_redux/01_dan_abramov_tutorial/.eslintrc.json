{
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "plugins": [
        "jest"
    ],
    "rules": {
        "semi": [
            2,
            "always"
        ]
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    },
    "env": {
        "jest/globals": true
    }
}
